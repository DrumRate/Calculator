<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.omgtu.calculator.MainActivity">

    <AutoCompleteTextView
        android:id="@+id/result"
        android:layout_width="365dp"
        android:layout_height="121dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorResult"
        android:backgroundTintMode="screen"
        android:editable="false"
        android:hint="@string/number0"
        android:maxLines="2"
        android:textAlignment="textEnd"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonGroup"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481" />

    <TableLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonSin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionSin" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionCos" />

            <Button
                android:id="@+id/buttonSqr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionSqr" />

            <Button
                android:id="@+id/buttonBS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionDel"
                app:layout_constraintBottom_toTopOf="@+id/buttonGroup"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result"
                app:layout_constraintVertical_bias="0.0" />
        </TableRow>

        <TableRow
            android:id="@+id/functionRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionSqrt" />

            <Button
                android:id="@+id/buttonOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionOP" />

            <Button
                android:id="@+id/buttonCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionCP" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionClr" />
        </TableRow>

        <TableRow
            android:id="@+id/digitRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number7"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="220dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number8"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="220dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number9"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="220dp" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionMul" />

        </TableRow>

        <TableRow
            android:id="@+id/digitRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number4"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="156dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number5"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="156dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number6"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="156dp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionDiv" />

        </TableRow>

        <TableRow
            android:id="@+id/digitRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number1"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="88dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number2"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="88dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number3"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="88dp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionMin" />

        </TableRow>

        <TableRow
            android:id="@+id/functionRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/number0" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionDot" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="=" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorButton"
                android:text="@string/functionPlus" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
